{
  "name": "ASM",
  "scopeName": "source.asm",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#single-line-comment-consuming-line-ending"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.block.asm",
          "begin": "(/\\*)(?:\\s*((@)internal)(?=\\s|(\\*/)))?",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.comment.asm"
            },
            "2": {
              "name": "storage.type.internaldeclaration.asm"
            },
            "3": {
              "name": "punctuation.decorator.internaldeclaration.asm"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.asm"
            }
          }
        },
        {
          "begin": "(^[ \\t]+)?((//)(?:\\s*((@)internal)(?=\\s|$))?)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.asm"
            },
            "2": {
              "name": "comment.line.double-slash.asm"
            },
            "3": {
              "name": "punctuation.definition.comment.asm"
            },
            "4": {
              "name": "storage.type.internaldeclaration.asm"
            },
            "5": {
              "name": "punctuation.decorator.internaldeclaration.asm"
            }
          },
          "end": "(?=$)",
          "contentName": "comment.line.double-slash.asm"
        }
      ]
    },
    "single-line-comment-consuming-line-ending": {
      "begin": "(^[ \\t]+)?((//)(?:\\s*((@)internal)(?=\\s|$))?)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.whitespace.comment.leading.asm"
        },
        "2": {
          "name": "comment.line.double-slash.asm"
        },
        "3": {
          "name": "punctuation.definition.comment.asm"
        },
        "4": {
          "name": "storage.type.internaldeclaration.asm"
        },
        "5": {
          "name": "punctuation.decorator.internaldeclaration.asm"
        }
      },
      "end": "(?=^)",
      "contentName": "comment.line.double-slash.asm"
    }
  }
}