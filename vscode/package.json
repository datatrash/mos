{
  "name": "mos",
  "publisher": "datatrash",
  "displayName": "mos",
  "description": "An extension for the MOS 6502 assembler.",
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "version": "0.0.1",
  "preview": true,
  "license": "MIT",
  "homepage": "README.md",
  "galleryBanner": {
    "color": "#668",
    "theme": "dark"
  },
  "icon": "icon.png",
  "bugs": {
    "url": "https://github.com/datatrash/mos/issues"
  },
  "repository": {
    "url": "https://github.com/datatrash/mos.git",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "activationEvents": [
    "workspaceContains:**/mos.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "asm",
        "scopeName": "source.asm",
        "path": "./syntaxes/asm.tmLanguage.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "build"
      }
    ],
    "problemMatchers": [
      {
        "name": "mos",
        "owner": "mos",
        "source": "mos",
        "fileLocation": [
          "autoDetect",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.*?):(\\d+):(\\d*):?\\s+?(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "languages": [
      {
        "id": "asm",
        "extensions": [
          ".asm"
        ],
        "aliases": [
          "6502 Assembly"
        ],
        "configuration": "language-configuration.json"
      }
    ],
    "configuration": {
      "title": "MOS",
      "properties": {
        "mos.path": {
          "type": "string",
          "description": "Path to the mos executable",
          "markdownDescription": "Path to the `mos` executable"
        }
      }
    },
    "breakpoints": [
      {
        "language": "asm"
      }
    ],
    "debuggers": [
      {
        "type": "mos",
        "label": "MOS Debug with VICE",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "workspace": {
                "type": "string",
                "description": "Absolute path to workspace containing mos.toml",
                "default": "${workspaceFolder}"
              },
              "vicePath": {
                "type": "string",
                "description": "Absolute path to a VICE binary"
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "mos",
            "request": "launch",
            "name": "Launch",
            "workspace": "${workspaceFolder}",
            "preLaunchTask": "mos: Build"
          }
        ]
      }
    ]
  },
  "scripts": {
    "check-unix": "code --disable-extensions --extensionDevelopmentPath=$INIT_CWD $INIT_CWD/test-workspace",
    "check-win": "code --disable-extensions --extensionDevelopmentPath=%INIT_CWD% %INIT_CWD%/test-workspace",
    "compile": "node bundle",
    "publish": "vsce publish",
    "mos-version": "node mos-version",
    "test": "jest --passWithNoTests",
    "vscode:prepublish": "npm run mos-version && node bundle"
  },
  "dependencies": {
    "decompress": "^4.2.1",
    "https-proxy-agent": "^5.0.0",
    "node-fetch": "^3.0.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.4",
    "smart-buffer": "^4.2.0",
    "unquote": "^1.1.1",
    "vscode-debugadapter": "^1.49.0",
    "vscode-debugprotocol": "^1.49.0",
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/decompress": "^4.2.4",
    "@types/glob": "^7.1.4",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.4",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.8",
    "@types/vscode": "^1.60.0",
    "esbuild": "^0.12.28",
    "glob": "^7.1.6",
    "jest": "^27.2.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "vsce": "^1.99.0"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
