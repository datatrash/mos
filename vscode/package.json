{
  "name": "mos",
  "publisher": "datatrash",
  "displayName": "mos",
  "description": "An extension for the MOS 6502 assembler.",
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "version": "0.0.1",
  "preview": true,
  "license": "MIT",
  "homepage": "README.md",
  "galleryBanner": {
    "color": "#668",
    "theme": "dark"
  },
  "icon": "icon.png",
  "bugs": {
    "url": "https://github.com/datatrash/mos/issues"
  },
  "repository": {
    "url": "https://github.com/datatrash/mos.git",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "activationEvents": [
    "workspaceContains:**/mos.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "asm",
        "extensions": [
          ".asm"
        ],
        "aliases": [
          "6502 Assembly"
        ],
        "configuration": "language-configuration.json"
      }
    ],
    "configuration": {
      "title": "MOS",
      "properties": {
        "mos.path": {
          "type": "string",
          "default": "mos",
          "description": "Path to the mos executable",
          "markdownDescription": "Path to the `mos` executable"
        }
      }
    }
  },
  "scripts": {
    "publish": "vsce publish",
    "vscode:prepublish": "npm run compile && rollup -c",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "vsce": "^1.85.1",
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.14.32",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "glob": "^7.1.6",
    "rollup": "^2.34.2",
    "typescript": "^4.2.3"
  }
}
